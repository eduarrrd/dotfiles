alias l='ls -CF'
alias ll='ls -l'
alias la='ls -la'

# colorization
alias ip='ip -color=auto'
alias grep='grep --color=auto'
alias diff='diff --color=auto'

# human readable numbers
alias du='du -h'
alias df='df -h'

# try to resume if possible
alias wget='wget -c'

alias ipmon='ip -ts monitor label'

command -v git &> /dev/null && alias diff='git diff --color-moved=dimmed-zebra --color-moved-ws=allow-indentation-change'
